            .grid.rounded-3xl.shadow-sm.bg-white.bg-slate-100.flex-col(class='max-w-[370px]')
            img.rounded-t-3xl.justify-center.grid.h-80.object-cover(src=book.img width='375' height='200' alt='movie.title')
            .group.p-6.grid.z-10.bg-white
                a.font-bold.line-clamp-2(href='{`${movie.link}`}' class='group-hover:text-cyan-700 sm:text-2xl')
                h1= book.titulo
                span.text-slate-400.pt-2.font-semibold
                h3= book.autor
